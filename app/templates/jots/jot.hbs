{{!-- Editor --}}
{{!-- <div class='layout-row layout-fill'> --}}
  <div id='simditor-editor-div'>
    {{simditor-editor value=model
                      update=(action (mut model.content))
                      toolbar=simditorOptions.toolbar
                      editor=(mut editor)
                      onValuechanged=(action 'saveJotSlow')
                      onBlur=(action 'saveJotNow') }}
  </div>
{{!-- </div> --}}

