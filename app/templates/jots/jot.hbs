{{!-- Title and Tags --}}
<div class='layout-row layout-fill'>
  <div class='flex-60'>
    {{paper-input class='jot-input jot-input-title'
                  label='Title'
                  value=model.title
                  required=true
                  onChange=(action (mut model.title))
                  onBlur='saveJotNow' }}
  </div>
  <div class='flex-30'>
    {{paper-input class='jot-input'
                  label='Tags'
                  value=model.tags
                  onChange=(action (mut model.tags))
                  onBlur='saveJotNow'}}
  </div>
  <div class='flex-10' id='data-state'>
    {{paper-icon 'check-circle' id='status-icon' title='Save' click=(action 'saveJotNow')}}
  </div>
</div>
{{!-- end Title and Tags --}}

